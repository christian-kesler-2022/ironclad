<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    // overlay-left functions
    function showOptions() {
        document.getElementById('overlay-left').style.display = 'block';
    }
    function hideOptions() {
        document.getElementById('overlay-left').style.display = 'none';
    }
    function toggleOptions() {
        currentState = document.getElementById('overlay-left').style.display;

        if (currentState == 'none') {
            document.getElementById('overlay-left').style.display = 'block'
        } else {
            document.getElementById('overlay-left').style.display = 'none'
        }
    }


    // guide pages copy function
    function copyToClipboard(element, copy) {
        var $temp = $("<textarea>");
        var brRegex = /<br\s*[\/]?>/gi;
        $("body").append($temp);
        $temp.val($(element).html().replaceAll("&lt;", '<').replaceAll("&gt;", '>').replace(brRegex, "\r\n")).select();
        document.execCommand("copy");
        $temp.remove();
        document.getElementById(copy).style.backgroundImage = "url('/images/checkmark.png')";
    }
